extends ../layout/index

block  contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bien
            span.font-normal Raiz
        h3.text-center.text-3xl.font-extrabold= pagina

        if errores
           div(class='max-w-md mx-auto my-10')
               each error in errores
                p.bg-red-600.text-black.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvidepassword" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email de Registro 
                        input.nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-200(placeholder="email" type="text" name="email")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea Cuenta
                        a.text-gray-500.text-xs(href="/auth/login") ¿Tienes Cuenta? Inicia Sesiòn
                    input(class="w-full bg-green-300 hover:bg-indigo-200 text-gray-600 font-bold py-3 cursor-pointer" type="submit" value="Enviar Correo")