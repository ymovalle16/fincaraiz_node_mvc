extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block  contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Finca
            span.font-normal Raiz
        h3.text-center.text-3xl.font-extrabold= pagina

        if errores
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p.bg-red-600.text-black.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rouded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST" action="/propiedades/crear")
                input(type="hidden" name="_csrf" value= csrfToken)
                div.space-y-5
                    h1.text-lg.leading-6.font-medium.text-gray-600 Información General
                    p.text-gray-600 Añade Información Sobre la Propiedad a la Venta
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="titulo") Titulo del Anuncio
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(placeholder="Titulo Propiedad, eje: Casa en la Playa" 
                                type="text" name="titulo" value=datos.titulo ? datos.titulo : '')

                    div 
                        label(class= "block-text sm-uppercase text:gray-500 mb-3 font-bold" for="descripcion") Descripción
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(placeholder="Descripción"
                            type="text" name="descripcion")= datos.descripcion ? datos.descripcion : ''
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="categoria") Categoria
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(name="categoria")
                                option(value="") - Seleccione -
                                each categoria in categorias 
                                    option(value=categoria.id selected= datos.categoria ? datos.categoria == categoria.id ? true : false : null)= categoria.nombre 
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(name="precio")
                                option(value="") - Seleccione...
                                 each precio in precios 
                                    option(value=precio.id selected= datos.precio ? datos.precio == precio.id ? true : false : null)= precio.nombre 


                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(name="habitaciones")
                                option(value="") - Seleccione...
                                - var n = 1;
                                    while n < 5
                                        option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n++}
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estacionamiento") Estacionamientos
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(name="estacionamiento")
                                option(value="") - Seleccione...
                                - var n = 1;
                                    while n < 4
                                        option(value=n selected= datos.estacionamiento ? datos.estacionamiento == n ? true : false : null) #{n++}
                        
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="wc") WC
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(name="wc")
                                option(value="") - Seleccione...
                                - var n = 1;
                                    while n < 5
                                        option(value=n selected= datos.wc ? datos.wc == n ? true : false : null) #{n++}
                    div.border-gray-200.border-t.py-5.space-y-5
                        h1.text-lg.leading-6.font-medium.text-gray-800 Ubicación
                        p.text-gray-800 Ubicar Propiedad en el Mapa
                        #mapa.h-96

                        div
                            p.calle= datos.calle ? datos.calle : ''
                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle: '')
                        input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '')
                    
                    input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit"
                        value="Añadir Imagen")
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")